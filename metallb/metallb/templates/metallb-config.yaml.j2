apiVersion: metallb.io/v1beta1
kind: IPAddressPool
metadata:
  name: unique-ip-pool-v3
  namespace: metallb-system
spec:
  addresses:
  - {{ ip_range }}
---
apiVersion: metallb.io/v1beta1
kind: L2Advertisement
metadata:
  name: unique-l2-advert-v3
  namespace: metallb-system
spec:
  # 이 광고를 적용할 IP Address Pool 이름을 지정합니다.
  ipAddressPools:
  - unique-ip-pool-v3
